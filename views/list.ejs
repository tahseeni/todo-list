<% todoTasks.forEach((entry)=>{ %>
    <li>
        <% if (entry._id==idTask) { %>
            <form class="todo-edit-form" action="/edit/<%= entry._id %>" method="POST"> <input class="edit-input"
                    type="text" value="<%= entry.content %>" name="content">
                <a href="/" class="cancel">Cancel</a>
                <button type="submit" class="save">Save</button>
                <a href="/delete/<%= entry._id %>" class="delete">
                    <i class="fa-solid fa-trash-can"></i>
                </a>
            </form>
            <% } else { %>
                <div>
                    <%= entry.content %>
                </div>
                <a href="/edit/<%= entry._id %>" class="edit-btn">
                    <i class="fa-solid fa-pen-to-square"></i>
                </a>
                <a href="/delete/<%= entry._id %>" class="delete">
                    <i class="fa-solid fa-trash-can"></i>
                </a>
                <% } %>
    </li>
    <% }) %>